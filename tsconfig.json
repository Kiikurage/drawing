{
    "compilerOptions": {
        "baseUrl": "./",
        "lib": [
            "ES2020"
        ],
        "target": "ESNext",
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "paths": {
            "@drawing/*": [
                "packages/*"
            ]
        }
    },
    "exclude": [
        "**/*.test.ts"
    ]
}
